        			<w2:keyInfo>
        				<w2:key dataType="text" name="claim_memo" id="claim_memo"></w2:key>
        				<w2:key dataType="text" name="amount" id="amount"></w2:key>
        				<w2:key dataType="text" name="date" id="date"></w2:key>
        			</w2:keyInfo>
        		</w2:dataMap>
        	</w2:dataCollection>
        	<w2:workflowCollection />

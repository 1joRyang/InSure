        	</xf:submission>
        </xf:model>
        <w2:layoutInfo/>
        <w2:publicInfo method=""/>
        <script lazy="false" type="text/javascript"><![CDATA[
scwin.onpageload = function() {
	scwin.claimNo = localStorage.getItem("claimBefore");

    // claim_no로 결과 받아오기
    let req = {"elData": {"claim_no": scwin.claimNo }};
    $c.sbm.execute(sbm_getMemo, req);

};

scwin.btn_confirm_onclick = function (e) {
    $p.parent().ipt_claimNo.setValue(scwin.claimNo);
    $p.closePopup();
};

scwin.btn_close_onclick = function (e) {
    localStorage.removeItem("claimBefore");
    $p.closePopup();
};
]]></script>

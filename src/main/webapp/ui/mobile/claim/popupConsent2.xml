<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="/InsWebApp/cm/css/claimPage.css" type="text/css"?>
<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:w2="http://www.inswave.com/websquare" xmlns:xf="http://www.w3.org/2002/xforms">
    <head>
        <w2:type>COMPONENT</w2:type>
        <w2:buildDate/>
        <w2:MSA/>
        <xf:model>
            <w2:dataCollection baseNode="map"/>
            <w2:workflowCollection/>
        </xf:model>
        <w2:layoutInfo/>
        <w2:publicInfo method=""/>
        <script lazy="false" type="text/javascript"><![CDATA[
            scwin.onpageload = function() {
                // Additional JS logic can go here if needed
                btn_agree.addClass("disabled");
            };
        
scwin.agreement_select_onviewchange = function (info) {
    console.log("========체크박스 이벤트 발생!");
    console.log("========전달받은 info 객체", info);
    console.log("========info.value : ", info.value);
    console.log("========typeof info.value : ", typeof info.value);
    if(info.value == "1"){
        btn_agree.removeClass("disabled");
        console.log("버튼 활성화!");
    } else {
        btn_agree.addClass("disabled");
        console.log("버튼 비활성화!");
    }
};



scwin.btn_agree_onclick = function (e) {
    if(!btn_agree.hasClass("disabled")){
        $p.parent().scwin.popup_callback("agree");
        //location.href = "/InsWebApp/websquare/websquare.html?w2xPath=/InsWebApp/ui/claimMobile/second.xml"
    }
};
]]></script>
    </head>
    <body ev:onpageload="scwin.onpageload">
        <xf:group class="pop_contents" id="pop_contents" meta_snippetCategory="00_화면시작" meta_snippetKeyComponent="true"
        	meta_snippetName="0_02 팝업페이지시작">

        	<!-- Title Section -->

        	<!-- Agreement Section -->
        	<xf:group style="height:205px;" id="" class="agreement_section">
        		<xf:group style="height:46px;display:flex;align-items:center;" id="" class="select_agreement">
        			<xf:select selectedindex="-1" id="agreement_select" appearance="full" style="height:41px;font-weight:bolder;" cols=""
        				rows="" ref="" ev:onviewchange="scwin.agreement_select_onviewchange">
        				<xf:choices>
        					<xf:item>
        						<xf:label><![CDATA[  [필수] 항목 전체 동의]]></xf:label>
        						<xf:value><![CDATA[1]]></xf:value>
        					</xf:item>
        				</xf:choices>
        			</xf:select>

        		</xf:group>

        		<!-- Agreement Items -->
        		<xf:group style="height:48px;display:flex;justify-content:space-between;align-items:center;" id="" class="item1">
        			<w2:textbox id="item1_label" label="1. 수집·이용에 관한 사항" style="width:196px;height:23px;" />
        			<w2:textbox id="arrow1" label=">" style="width:18px;height:23px;" />
        		</xf:group>
        		<xf:group style="height:48px;display:flex;justify-content:space-between;align-items:center;" id="" class="item1">
        			<w2:textbox id="item2_label" label="2. 제공에 관한 사항" style="width:196px;height:23px;" />
        			<w2:textbox id="arrow2" label=">" style="width:18px;height:23px;" />
        		</xf:group>
        		<xf:group style="height:48px;display:flex;justify-content:space-between;align-items:center;" id="" class="item1">
        			<w2:textbox id="item3_label" label="3. 조회에 관한 사항" style="width:196px;height:23px;" />
        			<w2:textbox id="arrow3" label=">" style="width:18px;height:23px;" />
        		</xf:group>
        	</xf:group>

        	<!-- Final Consent Section -->
        	<xf:group style="height:44px;" id="final_consent_section"></xf:group>

        	<xf:group style="height: 200px;" id="" class="consent_group">
        		<w2:textbox class="consent_checkbox" label="동의" style="" id="btn_agree" ev:onclick="scwin.btn_agree_onclick"/>
        	</xf:group>
        </xf:group>
    </body>
</html>

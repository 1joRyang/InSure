		<script lazy="false" type="text/javascript"><![CDATA[
scwin.onpageload = function() {
    // 시간 업데이트
    scwin.updateTime();
    setInterval(scwin.updateTime, 60000);
    
    // 탭 메뉴 클릭 이벤트
    scwin.onTabClick = function(tabType) {
        // 모든 탭에서 active 클래스 제거
        document.querySelector('.tab_all').classList.remove('active');
        document.querySelector('.tab_active').classList.remove('active');
        
        // 선택된 탭에 active 클래스 추가
        if (tabType === 'all') {
            document.querySelector('.tab_all').classList.add('active');
        } else {
            document.querySelector('.tab_active').classList.add('active');
        }
    };
    
    // 보험 현황 보기 버튼 클릭
    scwin.onInsuranceStatusClick = function() {
        alert("보험 현황 페이지로 이동합니다!");
        // location.href = "/InsWebApp/websquare/websquare.html?w2xPath=/InsWebApp/ui/insurance/status.xml";
    };
    
    // 메뉴 카드 클릭 이벤트
    scwin.onMenuClick = function(menuType) {
        switch(menuType) {
            case 'claim':
                alert("보험금 신청은 어떻게 하나요?");
                break;
            case 'documents':
                alert("보험 관련 서류 확인하기");
                break;
            default:
                alert("메뉴 선택됨");
        }
    };
    
};

// 시간 업데이트 함수
scwin.updateTime = function() {
    var now = new Date();
    var hours = String(now.getHours()).padStart(2, '0');
    var minutes = String(now.getMinutes()).padStart(2, '0');
    document.querySelector('.time_display').textContent = hours + ':' + minutes;
};
]]></script>

scwin.onpageload = function() {
	
};

scwin.btnNext_onclick = function (e) {
    location.href = "/InsWebApp/websquare/websquare.html?w2xPath=/InsWebApp/ui/claimMobile/sixth.xml"
};

// Camera Plugin 사진촬영
scwin.btn_camera_onclick = function() {
    var options = {
        quality: 70,
        destinationType: $h.camera.DestinationType.DATA_URL,
        sourceType: $h.camera.PictureSourceType.CAMERA,
        encodingType: $h.camera.EncodingType.JPEG,
        mediaType: $h.camera.MediaType.PICTURE,
        allowEdit: false,
        saveToPhotoAlbum: true
    };

   $h.camera.capturePhoto(scwin.camera_callback,options);
};

// Camera Plugin 갤러리(사진 가져오기)
scwin.btn_gallery_onclick = function() { 
     var options = {
        quality: 70,
        destinationType: $h.camera.DestinationType.DATA_URL,
        sourceType: $h.camera.PictureSourceType.PHOTOLIBRARY,
        encodingType: $h.camera.EncodingType.JPEG,
        mediaType: $h.camera.MediaType.PICTURE,
        allowEdit: false,
        correctOrientation: false
    };

    $h.camera.capturePhoto(scwin.camera_callback,options);
};

// 사진 선택 후 결과가 전달되는 함수
scwin.camera_callback = function(r){

    console.log("카메라/갤러리에서 받은 정보:" , r);

    // 1. 이미지 데이터(base64) 추출
    var imageData = "";
    if(r.data && r.data.callbackURI){
        //ios & 최신 버전
        imageData = r.data.callbackURI;
    } else if (r.data && r.data.image){
        // 구형 Android
        imageData = "data:image/jpeg;base64," + r.data.image;
    }

    // 2. 이미지 데이터 있을 경우에만 미리보기 생성
    if(imageData){
        // 하이브리드 앱 콜백 타이밍 문제를 해결학 위한 표준적인 방법
        setTimeout(function(){

            // 3. 부모 '컴포넌트 객체'를 ID로 찾기
            var parentComponent = $p.getComponentById("previewBox");

            if (parentComponent) {
                // 4. 컴포넌트 객체에서 실제 'DOM 노드'를 가져오기
                var parentNode = parentComponent.getGenerator();
                console.log("parentNode:" ,parentNode);

                // 5. [id] - 생성될 이미지의 고유 ID 생성
                var newImageId = "preview_" + new Date().getTime();
                console.log("newImageId:" ,newImageId);

                // 6. [componentName] - 생성할 컴포넌트의 종류 지정
                var componentName = "image";
                console.log("componentName:" ,componentName);

                // 7. [options] - 컴포넌트에 적용할 속성 정의
                var imageOptions = {
                    src:imageData,
                    style:"width:100px; height:100px; margin:5px; border-radius:8px; object-fit:cover;"
                };
                console.log("imageOptions:" ,imageOptions);

                // 6. [parent] - 4개의 인자를 모두 사용하여 함수 호출
                // $p.dynamicCreate(id, componentName, options, parent)
                $p.dynamicCreate(newImageId, componentName, imageOptions, parentNode);

                // 7. 화면 변경사항 최종 반영
                parentComponent.redraw();
            } else {
                console.error("부모영역 찾을 수 없음");
            }                
        }, 0);
    }
};
]]></script>

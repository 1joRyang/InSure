        <script lazy="false" type="text/javascript"><![CDATA[
scwin.onpageload = function() {
	// 1. sessionStorage에서 'attached_images' 키로 저장된 데이터 가져오기
    var imageDataJSON = sessionStorage.getItem('attached_images');

    if (imageDataJSON) {
        // 2. 가져온 데이터(JSON 문자열)를 자바스크립트 배열로 변환
        var imageDatas = JSON.parse(imageDataJSON);

        // 3. 이미지를 표시할 부모 영역 찾기
        var attachmentBox = document.querySelector('[id$="attachmentBox"]');

        if (attachmentBox && imageDatas.length > 0){
            var allImagesHTML="";
            // 4. 배열에 있는 각 이미지 데이터로 '<img>' 태그 만들기
            imageDatas.forEach(function(imageData){
                allImagesHTML += '<img src="' + imageData + '" style="width:100%; height:100px; border-radius:8px; object-fit: cover;">';                
            });

            // 5. 부모 영역에 생성된 모든 이미지 HTML을 한 번에 삽입
            attachmentBox.innerHTML = allImagesHTML;

            // 6. 데이터 사용했으므로 sessionStorage에서 삭제
            sessionStorage.removeItem('attached_images');
        }
    }
};

scwin.dataURItoBlob = function(dataURI){
    var byteString = atob(dataURI.split(',')[1]);
    var mimeString = dataURI.split(',')[0].split(':')[1].split(';')[0];
    var ab = new ArrayBuffer(byteString.length);
    var ia = new Uint8Array(ab);
    for (var i = 0; i < byteString.length; i++){
        ia[i] = byteString.charCodeAt(i);
    }
    return new Blob([ab],{type:mimeString});
};

scwin.btnNext_onclick = function () {
    
    // 1. 화면에 표시된 모든 이미지 데이터 다시 수집
    var attachmentBox = document.querySelector('[id$="attachmentBox"]');
    var images = attachmentBox.querySelectorAll('img');
    if(images.length === 0){
        alert("첨부된 서류가 없음");
        return;
    }

    // 1. FormData객체 생성
    var formData = new FormData();

    // 2. 이미지 Blob변환 후 FormData 추가
    images.forEach(function(img,index){
        var blob = scwin.dataURItoBlob(img.src);
        //"files"이름으로 각 파일 Blob 추가
        formData.append("files", blob, "image" + index + ".jpg");
    });

    // 3. 부가적인 텍스트 데이터 추가
    formData.append("claim_type", "실손보험청구");

    // 4. fetch API로 FormData전송
    // Content-Type 헤더는 FormData 사용 시 브라우저가 자동으로 설정
    fetch("/InsWebApp/submitClaim.pwkjson",{
        method: 'POST',
        body: formData,
    })
    .then(response => response.json())
    .then(data=>{
        console.log("전송 성공: ", data);
        alert("성공접수");
    })
    .catch(error=>{
        console.error("전송 실패: ", error);
        alert("접수중오류발생");
    });
};


scwin.submission1_submitdone = function (e) {
    console.log("개별 서류 접수 성공: ", e);
};

scwin.submission1_submiterror = function (e) {
    console.error("개별 서류 접수 실패: ", e);
};
]]></script>

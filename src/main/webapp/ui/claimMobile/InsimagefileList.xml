                            <w2:column width="70" inputType="text" style="" id="column8" value="created_at" displayMode="label" localeRef="Insimagefile_COLNAME_00008"></w2:column>
                           
						</w2:row>
					</w2:header>
					<w2:gBody style="" id="gBody2">
						<w2:row style="" id="row4">
							<w2:column width="70" inputType="text" style="" id="file_id" value="" displayMode="label"></w2:column>
                            <w2:column width="70" inputType="text" style="" id="claim_id" value="" displayMode="label"></w2:column>
                            <w2:column width="70" inputType="text" style="" id="original_file_name" value="" displayMode="label"></w2:column>
                            <w2:column width="70" inputType="text" style="" id="stored_file_name" value="" displayMode="label"></w2:column>

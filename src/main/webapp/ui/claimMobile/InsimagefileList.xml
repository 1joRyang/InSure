						<w2:key dataType="text" id="pageIndex" name="페이지_번호" defaultValue="1"></w2:key>
						<w2:key dataType="text" id="pageSize" name="페이지_건수" defaultValue="10"></w2:key>
					</w2:keyInfo>
					<w2:data use="false"></w2:data>
				</w2:dataMap>
				<w2:dataList baseNode="list" id="dlt_insimagefileVoList" repeatNode="map" saveRemovedData="true" style="">
					<w2:columnInfo>
						<w2:column dataType="text" id="file_id" name="file_id"></w2:column>
                        <w2:column dataType="text" id="claim_id" name="claim_id"></w2:column>
                        <w2:column dataType="text" id="original_file_name" name="original_file_name"></w2:column>
                        <w2:column dataType="text" id="stored_file_name" name="stored_file_name"></w2:column>
                        <w2:column dataType="text" id="file_path" name="file_path"></w2:column>
                        <w2:column dataType="text" id="file_size" name="file_size"></w2:column>
                        <w2:column dataType="text" id="file_type" name="file_type"></w2:column>
                        <w2:column dataType="text" id="created_at" name="created_at"></w2:column>
                       
					</w2:columnInfo>
				</w2:dataList>
				<w2:dataMap baseNode="map" id="dmp_insimagefileVoDetail" style="">
					<w2:keyInfo>
						
					</w2:keyInfo>
				</w2:dataMap>
			</w2:dataCollection>
			<w2:workflowCollection></w2:workflowCollection>

			<xf:submission id="sbm_selectInsimagefileVoList" ref='data:json,{"id":"dmp_insimagefileVo","key":"insimagefileVo"}'
				target='data:json,{"id":"dlt_insimagefileVoList","key":"elData.insimagefileVoList"}' action="/InsWebApp/InsimagefileList.pwkjson" method="post"
				mediatype="application/json" encoding="UTF-8" instance="" replace="" errorHandler="" customHandler="" mode="asynchronous"
				processMsg="이미지파일테이블 리스트를 조회 중입니다." ev:submit="" ev:submitdone="scwin.sbm_insimagefileList_submitdone" ev:submiterror="" abortTrigger="">
			</xf:submission>
		</xf:model>
		<w2:layoutInfo></w2:layoutInfo>
		<w2:publicInfo method="" />
		<script lazy="false" type="text/javascript"><![CDATA[
	scwin.onpageload = function() {		
		//search_box
        var cptIbxName = $p.getComponentById("searchComp_1");
        if(cptIbxName == undefined){
			search_box.hide();
        }
		
		// 이미지파일테이블 조회
		scwin.btn_search_onclick();
	};

	/************************** 이벤트 함수 *************************/
	
	/**
	 * 조회 버튼 클릭 이벤트
	 * @date
	 * @memberOf
	 * @param 
	 * @returns
	 * @author 
	 * @example
	 */		   
	scwin.btn_search_onclick = function(e) {
	
		// PGAE번호 초기화
		dmp_insimagefileVo.set("pageIndex","1");
		pgl_insimagefileList.setSelectedIndex(1);

		// 서버통신 - 이미지파일테이블 조회
		$c.sbm.execute($p, sbm_selectInsimagefileVoList);
	};
	
	scwin.sbm_insimagefileList_submitdone = function(e) {

		// error 수신시
		var elData = e.responseJSON.elData;
		var elHeader  = e.responseJSON.elHeader;
		if(elHeader == null || elHeader == "" || elHeader == "undefiend" || elHeader.resSuc == false) {
			$c.win.alert(`에러코드 : ${elHeader.resCode}\n에러메시지 : ${elHeader.resMsg}`);
			return false;
		}

		// 이미지파일테이블 dataMap 초기화
		dmp_insimagefileVoDetail.setEmptyValue();

		// 총 레코드 수 업데이트
        spn_listCnt.setLabel(elData.totalCount);
        
        // 데이터를 그리드에 셋팅
        dlt_insimagefileVoList.setJSON(elData.insimagefileVoList);
        
        // 페이지 네비게이터 업데이트
        var totalPageCount = Math.ceil(elData.totalCount / dmp_insimagefileVo.get("pageSize"));
        pgl_insimagefileList.setCount(totalPageCount);
        
		// 페이징 정보 업데이트
        spn_totalPageCount.setValue(totalPageCount);
        spn_pageIndex.setValue(dmp_insimagefileVo.get("pageIndex"));
        pgl_insimagefileList.setSelectedIndex(dmp_insimagefileVo.get("pageIndex"));
	};		

	/**
	 * 페이지 번호 클릭 이벤트
	 * @date
	 * @memberOf
	 * @param 
	 * @returns 
	 * @author 
	 * @example
	 */
	scwin.pgl_insimagefileList_onclick = function(idx) {
	
		// 페이지 번호 세팅
		dmp_insimagefileVo.set( "pageIndex" , idx ); 
		// 서버통신 - 사원목록 조회
		$c.sbm.execute($p, sbm_selectInsimagefileVoList);
	};

]]></script>
	</head>
	<body ev:onpageload="scwin.onpageload">

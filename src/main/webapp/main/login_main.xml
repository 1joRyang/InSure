    console.log("=== 갤러리 열기 ===");
     
    // 1. 갤러리 데이터 초기화
    if (result && result.data) {
        this.displayGalleryItems(result.data);
    }
    
    // 2. 갤러리 UI 상태 설정
    $p.getComponentById("gallery_container").setVisible(true);
    $p.getComponentById("gallery_loading").setVisible(false);
    
    // 3. 첫 번째 이미지 선택 (옵션)
    if (result.data && result.data.length > 0) {
        this.selectFirstImage(result.data[0]);
    }
    
    // 4. 갤러리 모드 활성화
    currentMode = "gallery";
    
    // 5. 키보드 이벤트 리스너 추가
    this.addGalleryKeyboardEvents();
    
    // 6. 갤러리 통계 업데이트
